<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fffon"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:text="El Gato"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F2F7FB"
            android:textSize="50dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/txt_titulo"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:text="Turno jugador:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F2F7FB"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/txt_jugador"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F2F7FB"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:background="@color/black"
            android:id="@+id/txt_ganador"
            android:layout_marginTop="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#F2F7FB"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
        <ImageButton
            android:id="@+id/btn_exit"
            android:layout_gravity="right"
            android:background="@drawable/exit"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageButton>

        <ImageButton
            android:id="@+id/btn_refrescar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_marginTop="75dp"
            android:background="@drawable/refrescar"></ImageButton>

    </FrameLayout>
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*"
    >

    <TableRow
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        >

        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_primero"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos" />
        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_segundo"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos"
            android:layout_margin="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_tercero"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos"
            android:layout_margin="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        >
        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_cuarto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos" />

        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_quinto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos" />

        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_sexto"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos"
            android:layout_margin="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </TableRow>
    <TableRow
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        >
        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_septimo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos" />
        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_octavo"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos"
            android:layout_margin="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        <Button
            android:textSize="60dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/btn_noveno"
            android:backgroundTint="#F1F2F6"
            android:drawableTop="@drawable/gatos"
            android:layout_margin="2dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </TableRow>
</TableLayout>

</LinearLayout>